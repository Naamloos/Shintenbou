<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:Pages="clr-namespace:Shintenbou.Pages"
        Title="Shintenbou"
				Height="500"
				Width="500"
				MinWidth="250"
				MinHeight="100"
				>
	<DockPanel Background="lightgray">
		<StackPanel Width="100" Background="dimgray" >
			<Button Name="Anime" Content="Anime" Background="lightgray"></Button>
			<Button Name="Manga" Content="Manga" Background="lightgray"></Button>
			<Button Name="Music" Content="Music" Background="lightgray"></Button>
			<Button Name="Tracking" Content="Tracking" Background="lightgray"></Button>
		</StackPanel>
		<Pages:WelcomePage Name="WelcomePage" IsVisible="true"/>
		<Pages:AnimePage Name="AnimePage" IsVisible="false"/>
		<Pages:MangaPage Name="MangaPage" IsVisible="false"/>
		<Pages:MusicPage Name="MusicPage" IsVisible="false"/>
		<Pages:TrackingPage Name="TrackingPage" IsVisible="false"/>
	</DockPanel>
</Window>