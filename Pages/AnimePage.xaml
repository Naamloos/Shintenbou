<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:pages="clr-namespace:Pages">
  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <Grid Background="lightgray" Name="AnimeGrid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition MinWidth="20"/>
        <ColumnDefinition MinWidth="20"/>
        <ColumnDefinition MinWidth="20"/>
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
        <RowDefinition MinHeight="10"/>
        <RowDefinition MinHeight="10"/>
      </Grid.RowDefinitions>
      <TextBox Grid.Column="0" Grid.Row="0" Margin="25,0,0,0" Name="AnimeSearch" MinWidth="300" Height="20"/>
      <Button Grid.Column="1" Grid.Row="0" Margin="25,0,0,0" Name="AnimeSearchButton" MinWidth="15" Height="20"/>
    </Grid>
  </ScrollViewer>
</UserControl>