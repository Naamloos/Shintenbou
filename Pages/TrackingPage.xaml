<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:pages="clr-namespace:Pages"
						 >
  
  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <Grid Background="lightgray" Name="TrackingGrid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition MinWidth="150"/>
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
        <RowDefinition Height="25" />
        <RowDefinition Height="250" />
        <RowDefinition Height="25" />
        <RowDefinition Height="250" />
      </Grid.RowDefinitions>

      <TextBlock Margin="25,0,0,0" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">Favourite Anime</TextBlock>

      <TextBlock Margin="25,0,0,0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0">Favourite Manga</TextBlock>
    </Grid>
  </ScrollViewer>
</UserControl>