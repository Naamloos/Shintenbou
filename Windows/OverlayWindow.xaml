<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OverlayWindow"
				Width="300"
				Height="500">
  <ScrollViewer Name="scroller" Background="#111111">
    <Grid Background="lightgray" Name="OverlayGrid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition MinWidth="20"/>
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
        <RowDefinition MinHeight="10"/>
        <RowDefinition MinHeight="10"/>
        <RowDefinition MinHeight="10"/>
      </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,50,0,0" Name="OverlayTitle"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,-50,0,0" Name="OverlayDescription"/>
        <Image Grid.Row="2" Grid.Column="0" MinHeight="300" Margin="0,-50,0,0" MinWidth="150"  Name="OverlayImage"/>
    </Grid>
  </ScrollViewer>
</Window>